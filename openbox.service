[Unit]
Description=Openbox service

Before=wm.target
After=xsettings.target
After=xorg-base.target

Requires=xorg-base.target

Conflicts=awesome.service
Conflicts=stumpwm.service
Conflicts=clfswm.service

[Service]
ExecStart=/usr/bin/openbox
ExecStop=/usr/bin/openbox --exit
Restart=on-failure
RestartSec=1

[Install]
WantedBy=wm.target
